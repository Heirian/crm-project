<br>
<div id="page-wrapper" >
   <div id="page-inner">
      <div class="row">
        <div class="col-md-12">
            <h2>Pessoas</h2>
        </div>
         <div class="col-lg-12">
            <table class="table table-striped table-bordered table-hover">
               <thead>
                  <tr>
                     <th>Nome</th>
                     <th>Tipo</th>
                     <th>Ações</th>
                  </tr>
               </thead>
               <tbody>
                  <% @people.each do |person| %>
                  <tr>
                     <td><%= link_to person.name, person_path(person) %></td>
                     <td><%= person.type %></td>
                     <td>
                        <%= link_to "#{t(:view)}", person_path(person), class: 'btn btn-primary' %>
                        <%= link_to "#{t(:edit)}", person_path(person), class: 'btn btn-warning' %>
                        <%= link_to "#{t(:delete)}", person_path(person), method: :delete,
                             data: {confirm: "#{t(:delete_person?)}"}, class: 'btn btn-danger' %>
                      </td>
                  </tr>
                  </tr>
               </tbody>
               <% end %>
            </table>
         </div>
      </div>
   </div>
</div>
