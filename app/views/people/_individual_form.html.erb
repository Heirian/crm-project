<br>
<div id="page-wrapper">
   <div id="page-inner">
      <div class="container">
         <div class="col-12">
            <div align="center">
               <div>
                  <div class="row">
                     <div class="col-md-12">
                        <h2><%= @person.id %> - <%= @person.name %></h2>
                     </div>
                  </div>
                  <%= form_for(@person, html: { class: "form-horizontal", role: "form" }) do |f| %>
                  <div class="row">
                     <div class="col-lg-4 col-md-4">
                        <div class="form-group">
                           <label class="control-label col-md-3"><%= "#{t(:name)}" %></label>
                           <%= f.text_field :name, class: "form-control", placeholder: "#{t(:enter_person_name)}" %>
                        </div>
                     </div>
                     <div class="col-lg-4 col-md-4">
                        <div class="form-group" >
                           <label class="control-label col-md-4"><%= t(:person_birthday) %></label>
                           <%#= date_select :person, :birthday, { start_year: 2017, end_year: 1905, order: [:day, :month, :year]}, class: "form-control"  %>
                           <div style="margin-top: 25px">
                              <%= date_select :person,  :birthday, :start_year=>1900,end_year: 2017 %>
                           </div>
                        </div>
                     </div>
                     <div class="col-lg-4 col-md-4">
                        <div class="form-group">
                           <div style="margin-top: 20px">
                              <%= f.label :gender,class:"control-label col-md-3" %>
                           </div>
                           <div style="margin-top: 28px">
                              <%= f.radio_button :gender, :female %>
                              <%= label :gender, t(:female) %>
                              <%= f.radio_button :gender, :male, checked: true %>
                              <%= label :gender, t(:male) %>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-lg-4 col-md-4">
                        <div class="form-group">
                           <label class="control-label col-md-3"><%= "#{t(:cpf)}" %></label>
                           <div>
                              <%= f.text_field :cpf, class: "form-control", placeholder: "#{t(:enter_cpf)}" %>
                           </div>
                        </div>
                     </div>
                     <div class="col-lg-4 col-md-4">
                        <div class="form-group">

                              <label class="control-label col-md-3"><%= "#{t(:rg)}" %></label>

                           <div>
                              <%= f.text_field :rg, class: "form-control", placeholder: "#{t(:enter_rg)}" %>
                           </div>
                        </div>
                     </div>
                    <div class="col-lg-4 col-md-4">
                        <div class="form-group">
                           <label class="control-label col-md-4"><%= "#{t(:marital_status)}" %></label>
                           <div>
                              <%= f.select :marital_status, options_for_enum(@person, :marital_status), {}, { class: 'form-control' } %>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               <!--<div class="type-person-no-display">
                  <%#= f.select :type, ['Individual'] if @person.new_record?  %>
                  </div>-->
               <br>
               <div class="form-group">
                  <div>
                     <%= f.submit(@person.new_record? ? "#{t(:add_a_person)}" : "#{t(:update_person)}",
                        class: "btn btn-primary") %>
                  </div>
               </div>
               <% end %>
            </div>
            </ul>
         </div>
      </div>
   </div>
</div>
</div>
