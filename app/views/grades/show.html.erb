<br>
<div style="margin-top: 0;padding-left: 14%;background-color: #fff;">
   <div class="row">
      <!-- BEGIN VALIDATION STATES-->
      <div class="portlet-form bordered">
         <div class="container-fluid">
            <div class="col-lg-12">
               <div>
                  <%= link_to(edit_grade_path(@grade), class: "btn btn-circle btn-lg green pull-right") do %>
                  <i class="fa fa-edit" aria-hidden="true"></i>
                  <% end %>
                  <h2><%= @grade.id %> - <%= @grade.name %></h2>
               </div>
               <%# if current_user.has_role? :admin  %>
               <%#= link_to t(:delete), place_path(@place), method: :delete,
                  data: {confirm: "#{t(:delete_place?)}"}, class: 'btn btn-danger' %>
               <%# end %>
            </div>
            <div class="col-lg-6 col-md-6">
               <br><br>
               <label><%= t(:category) %></label>
               <div class="input-group">
                  <input class="form-control input-lg" value="<%= @grade.category %>" disabled />
               </div>
               <label><%= t(:vacancy) %></label>
               <div class="input-group">
                  <input class="form-control input-lg" value="<%= @grade.vacancy %>" disabled />
               </div>
               <label><%= t(:course_load) %></label>
               <div class="input-group">
                  <input class="form-control input-lg" value="<%= @grade.course_load %>" disabled />
               </div>
               <label><%= t(:product) %></label>
               <div class="input-group">
                  <input class="form-control input-lg" value="<%= @grade.product_name %>" disabled />
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
