<div style="margin-top: 0;padding-left: 17%;background-color: #fff;">
   <div class="row">
      <div class="col-md-12">
         <!-- BEGIN VALIDATION STATES-->
         <div class="portlet-form bordered">
            <div class="container-fluid">
               <div class="portlet-body">
                  <div class="col-lg-offset-1 col-lg-11">
         <%= form_for [@person, @bank_account] do |baf| %>
         <div class="form-body">
            <div class="form-group">
               <div class="control-label">
                  <%= baf.label :bank_name, t(:bank_name) %>
               </div>
               <div>
                  <%= baf.text_field :bank_name, class: "form-control", placeholder: I18n.t(:add_bank_name) %>
               </div>
            </div>
            <div class="form-group">
               <div class="control-label">
                  <%= baf.label :bank_branch_number, t(:bank_branch_number) %>
               </div>
               <div>
                  <%= baf.text_field :bank_branch_number, class: "form-control", placeholder: I18n.t(:add_bank_branch_number) %>
               </div>
            </div>
            <div class="form-group">
               <div class="control-label">
                  <%= baf.label :account_number, t(:account_number) %>
               </div>
               <div>
                  <%= baf.text_field :account_number, class: "form-control", placeholder: I18n.t(:add_account_number) %>
               </div>
            </div>
         </div>
         <div class="form-actions">
            <div class="row">
               <div class="col-md-9">
                  <%= baf.submit class: 'btn btn-primary' %>
               </div>
            </div>
         </div>
         <% end %>
      </div>
   </div>
</div>

</div>

</div>
</div>
</div>
