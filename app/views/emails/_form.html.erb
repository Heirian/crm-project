<div style="margin-top: 0;padding-left: 2%;background-color: #fff;">

<div class="portlet light portlet-fit portlet-form bordered">

   <div class="portlet-body">
      <%= form_for [@emailable, @email] do |ef| %>
      <div class="form-body">
         <div class="form-group">
            <div class="control-label">
               <%= ef.label :body, t(:new_email) %>
            </div>
            <div>
               <%= ef.text_field :body, class: "form-control", placeholder: I18n.t(:add_new_email) %>
            </div>
            <div class="form-group">
               <div class="control-label">
                  <%= ef.label :kind %>
               </div>
               <div>
                  <%= ef.select :kind, options_for_enum(Email.new, :kind), {}, { class: 'form-control' } %>
               </div>
            </div>
            <div class="form-group">
               <%= ef.label :main %>
               <%= ef.check_box :main, {}, true, false %>
            </div>
         </div>
      </div>
      <div class="form-actions">
         <div class="row">
            <div class="col-md-9">
               <%= ef.submit t(:create_email), class: 'btn btn-primary' %>
            </div>
         </div>
      </div>
      <% end %>
   </div>
</div>
</div>
