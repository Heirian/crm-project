<div style="margin-top: 0;padding-left: 17%;background-color: #fff;">
   <div class="row">
      <div class="col-md-12">
         <!-- BEGIN VALIDATION STATES-->
         <div class="portlet-form bordered">
            <div class="container-fluid">
               <div class="portlet-body">
                  <div class="col-lg-offset-1 col-lg-11">
                     <%= form_for [@emailable, @email] do |ef| %>
                     <div class="form-body">
                        <div class="form-group">
                           <div class="col-lg-offset-2 col-lg-6">
                           <div class="control-label">
                              <%= ef.label :body, t(:new_email) %>
                           </div>
                           <div>
                              <%= ef.text_field :body, class: "form-control", placeholder: I18n.t(:add_new_email) %>
                           </div>
                         </div>
                       </div>
                       <br>
                           <div class="form-group">
                             <div class="col-lg-offset-2 col-lg-3">

                              <div class="control-label">
                                <label for="email_body">Tipo</label>
                                 <%#= ef.label (:kind) %>
                              </div>

                                 <%= ef.select :kind, options_for_enum(Email.new, :kind), {}, { class: 'form-control' } %>
                               </div>

                           </div>

                           <div class="form-group">
                             <div class="col-lg-offset-2 col-lg-10">

                              <%= ef.check_box :main, {}, true, false %>
                              <label for="email_body">Principal</label>
                            </div>

                           </div>

                        </div>

                        <div class="form-actions">

                          <div class="col-lg-offset-2 col-lg-12">
                            <%= ef.submit t(:create_email), class: 'btn btn-primary' %>
                          </div>

                        </div>
                     </div>
                     <% end %>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
