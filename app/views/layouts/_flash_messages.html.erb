<div class="container">

  <% flash.each do |name, message| %>

        <div class="col-md-6 col-md-offset-3">
          <div class="alert alert-<%= name %>" role="alert">
            <a href="#" class="close" data-dismiss="alert">&#215</a>
            <%= message %>
          </div>
        </div>

  <% end %>

</div>
