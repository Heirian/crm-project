<script type="text/javascript">
  $(document).ready(function() { $("#select2-country").select2();
    theme: "bootstrap"
  });
</script>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@state, html: { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-5">
          <%= f.label :name, "#{t(:state)}" %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :name, class: "form-control", placeholder: "#{t(:enter_state_name)}" %>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-md-offset-2 col-md-8">
            <%= f.collection_select :country_id, Country.all, :id, :name, { include_blank: false }, { multiple: false, class: 'form-control', id: 'select2-country' } %>
          </div>
        </div>
      </div>


      <div class="form-group">
        <div class="col-md-offset-5 col-md-4 btn-group">
          <%= f.submit(@state.new_record? ? "#{t(:add_a_state)}" : "#{t(:update_state)}",
                            class: "btn btn-primary") %>
          <%= link_to "#{t(:home)}", root_path, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
