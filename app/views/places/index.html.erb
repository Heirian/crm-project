<br>
<div class="container">
  <div align="center">
    <% @places.each do |place| %>
      <div class="col-md-4">
        <h3>
          <%= link_to place.name, place_path(place) %>
        </h3>
        <p>
          <%= link_to place.person.name, person_path(place.person) %>
        </p>
        <%= link_to "#{t(:delete)}", place_path(place), method: :delete,
        data: {confirm: "#{t(:delete_place?)}"}, class: 'btn btn-danger' %>
      </div>
      <br>
    <% end %>
  </div>
</div>
