<div class="container">
  <div align="center">
    <div class="col-6">
      <%= form_for [@phonable, @phone] do |ff| %>
        <div class="form-group">
          <div class="control-label">
            <%= ff.label :number, "#{t(:phone_number)}: #{t(:example_number_format_letter)}" %>
          </div>
          <div>
            <%= ff.text_field :number, class: "form-control", placeholder: "#{I18n.t(:add_phone_number)}: #{t(:example_number_format)}" %>
          </div>
          <div class="form-group">
            <div class="control-label">
              <%= ff.label :kind %>
            </div>
            <div>
              <%= ff.select :kind, options_for_enum(@phone, :kind), {}, { class: 'form-control' } %>
            </div>
          </div>
          <div class="form-group">
              <%= ff.label :main %>
              <%= ff.check_box :main, {}, true, false %>
          </div>
        </div>
        <%= ff.submit t(:edit_phone), class: 'btn btn-primary' %>
      <% end %>
      <hr/>
      <%= link_to t(:back), :back %>
    </div>
  </div>
</div>
