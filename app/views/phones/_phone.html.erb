
<tr>
   <td>
     <% if phone.main %>
       <i class="fa fa-certificate" aria-hidden="true"></i>
       <% end %>
    </td>
   <td><%= Phonelib.parse("#{phone.number}").full_international %></td>
   <td><%= phone.kind %></td>
   <td><% if phone.instant_message %>
     <%= phone.instant_message_to_array %>
   <% end %></td>
   <td ><% if phonable == @person %>
     <%= link_to(edit_person_phone_path(phonable, phone), class: "btn btn-circle btn-icon-only green pull-right") do %>
       <i class="fa fa-edit" aria-hidden="true" title="<%= t(:edit) %>"></i>
     <% end %>
     <%#= link_to t(:delete), person_phone_path(phonable, phone), method: :delete,
     data: { confirm: t(:delete_phone?) }, class: 'btn btn-danger' if current_user.has_role? :super %>
   <% else %>
     <%= link_to(edit_place_phone_path(phonable, phone), class: "btn btn-circle btn-icon-only green pull-right") do %>
       <i class="fa fa-edit" aria-hidden="true" title="<%= t(:edit) %>"></i>
     <% end %>
     <%#= link_to t(:delete), place_phone_path(phonable, phone), method: :delete,
     data: { confirm: t(:delete_phone?) }, class: 'btn btn-danger' if current_user.has_role? :admin %>
   <% end %>
  </td>

</tr>
