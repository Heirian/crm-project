<script type="text/javascript">
   $(document).ready(function() {
     $("#select2-instant-message").select2({
       placeholder: "Selecione aplicativos de mensagem",
       allowClear: true
     }
     );
   });
</script>
<div style="margin-top: 0;padding-left: 17%;background-color: #fff;">
   <div class="row">
      <div class="col-md-12">
         <!-- BEGIN VALIDATION STATES-->
         <div class="portlet-form bordered">

               <div class="portlet-body">

                     <%= semantic_form_for([@phonable, @phone], html: { class: "form-horizontal", role: "form" } ) do |ff| %>
                     <div class="form-body">
                        <div class="form-group">
                           <%= ff.label :number, t(:phone_number), class: "control-label col-md-3" %>

                          <div class="col-md-4">
                             <%= ff.text_field :number, class: "form-control", placeholder: "#{I18n.t(:add_phone_number)}: #{t(:example_number_format)}" %>
                          </div>
                        </div>
                        <div class="form-group">

                          <label for="email_body" class="control-label col-md-3"><%= t(:type) %></label>

                           <div class="col-md-4">
                              <%= ff.select :kind, options_for_enum(@phone, :kind), {}, { class: 'form-control' } %>
                           </div>
                        </div>
                        <div class="form-group">

                          <div class="col-md-4 col-md-offset-3 listing">
                            <%= ff.input :instant_message, as: :select, input_html: { class:'form-control', id: 'select2-instant-message',
                              multiple:'multiple' }, collection: Phone::INSTANT_MESSAGES_OPTIONS.invert, include_blank: true %>
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="checkbox text-center col-md-3 col-md-offset-2">
                            <%= ff.check_box :main, {}, true, false %><%= t(:main) %>
                          </div>
                        </div>

                     <div c\lass="form-actions">
                        <div class="row">
                           <div class="col-md-offset-3 col-md-4">
                              <%= ff.submit t(:create_phone), class: 'btn btn-circle btn-primary' %>
                              <%= link_to t(:back), :back,class: "btn btn-default btn-circle" %>
                           </div>
                        </div>
                     </div>
                     </div>
                     <% end %>

               </div>
               <div>
            </div>
         </div>
      </div>
   </div>
</div>
