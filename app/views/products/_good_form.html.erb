<br>
<div style="margin-top: 0;padding-left: 14%;background-color: #fff;">
   <div class="row">
      <!-- BEGIN VALIDATION STATES-->
      <div class="portlet-form bordered">
         <div class="container-fluid">
            <div class="col-lg-12">
               <div>
                  <%= link_to(edit_person_path(@product), class: "btn btn-circle btn-lg green pull-right") do %>
                  <i class="fa fa-edit" aria-hidden="true" title="<%= t(:edit) %>"></i>
                  <% end %>
                  <h2><%= @product.id %> - <%= @product.name %></h2>
               </div>
               <%# if current_user.has_role? :admin  %>
               <%#= link_to t(:delete), product_path(@product), method: :delete,
                  data: {confirm: "#{t(:delete_person?)}"}, class: 'btn btn-danger' %>
               <%# end %>
            </div>
            <div class="col-lg-6 col-md-6">
               <% if @product.type == 'Good' %>
               <div class="form-group"><br>
                  <label class="control-label col-3"><%= t(:type) %></label>
                  <input class="form-control col-6" value="<%= t(:good) %>" disabled />
               </div>
               <div class="form-group" >
                  <label class="control-label col-3"><%= t(:stock) %></label>
                  <input class="form-control" value="<%= @product.stock %>" disabled />
               </div>
               <% else %>
               <div class="form-group"><br>
                  <label class="control-label col-3"><%= t(:type) %></label>
                  <input class="form-control" value="<%= t(:service) %>" disabled />
               </div>
               <% end %>
               <div class="form-group"><br>
                  <label class="control-label col-3"><%= t(:product_baseValue) %></label>
                  <input class="form-control" value="<%= t(:product_baseValue) %>" disabled />
               </div>
               <div class="form-group"><br>
                  <label class="control-label col-3"><%= t(:product_category) %></label>
                  <input class="form-control" value="<%= t(:product_category) %>" disabled />
               </div>
               <textarea rows="4" cols="50"><%= product_description %></textarea>
            </div>
         </div>
      </div>
   </div>
   <hr/>
</div>
