<tr>
  <th>
    <%= product.name %>
  </th>

  <%= form_for order_item, remote: true do |f| %>
    <th>
      <%= I18n.t(product.type.downcase) %>
    </th>

    <th>
      <%= I18n.t(product.category) %>
    </th>

    <th>
      <%= number_to_currency order_item.unit_price %>
    </th>

    <th>
      <%= number_to_currency order_item.total_price %>
    </th>

    <th>
      <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
    </th>

    <%= f.hidden_field :product_id, value: product.id %>

    <th>
      <%= f.submit "Acrescentar unidades", class: "btn btn-circle blue" %>
      <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-circle red" } %>
    </th>
  <% end %>
</tr>
