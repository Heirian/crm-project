<div class="container">
  <div align="center">
    <% if object.errors.any? %>

        <div class="col-md-6">
          <div class="alert alert-danger">
            <ul>
              <a href="#" class="close">&#215</a>
              <% object.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>

    <% end %>
  </div>
</div>
<br>

<script type="text/javascript">
$(".alert a").click(function() {
    $(".alert").hide()
    return false;
});
</script>
