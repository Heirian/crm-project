<div class="container">
  <div align="center">
    <h2><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>
      <br>
      <div class="col-md-4 col-md-offset-4">
        <%= f.password_field :email, class: 'form-control', placeholder: t(:email) %>
      </div>
      <br>
      <div><%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: 'btn btn-primary' %></div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
