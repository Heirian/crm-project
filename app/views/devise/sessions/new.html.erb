<body class="login">
   <!-- BEGIN LOGO -->
   <div class="logo">
      <a href="index.html">
      <img src="/assets/layouts/layout/img/logo.png" alt="logo" class="logo-default" />
      </a>
   </div>
   <!-- END LOGO -->
   <!-- BEGIN LOGIN -->
   <div class="content">
      <!-- BEGIN LOGIN FORM -->
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class:"login-form") do |f| %>
      <h3 class="form-title font-green"><%= t('.sign_in', :default => "Sign in") %></h3>
      <div class="alert alert-danger display-hide">
         <button class="close" data-close="alert"></button>
         <span> Enter any username and password. </span>
      </div>
      <div class="form-group">
         <%= f.email_field :email, class: 'form-control form-control-solid placeholder-no-fix', placeholder: t(:email) %>
      </div>
      <div class="form-group">
         <%= f.password_field :password, class: 'form-control form-control-solid placeholder-no-fix', placeholder: t(:password) %>
      </div>
      <div class="form-actions">
         <%= f.submit t('.sign_in', :default => "Sign in"), class: 'btn green uppercase' %>
         <% if devise_mapping.rememberable? -%>
         <%= f.check_box :remember_me, class: 'rememberme check mt-checkbox mt-checkbox-outline' %>
         <%= f.label :remember_me, class:"rememberme check mt-checkbox mt-checkbox-outline" %>
         <% end -%>
      </div>
      <%= render "devise/shared/links" %>
      <% end  %>
   </div>
</body>
</html>
