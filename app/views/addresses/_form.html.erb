<script type="text/javascript">
   $(document).ready(function () {
     $("#select2-country").select2();
     $("#select2-state").select2();
     $("#select2-city").select2();
     theme : "bootstrap"
   });
</script>
<div style="margin-top: 0;padding-left: 2%;background-color: #fff;">
   <div class="portlet light portlet-fit portlet-form bordered">
      <div class="portlet-body">
         <%= form_for [@addressable, @address] do |af| %>
         <div class="form-body">
            <div class="form-group">
               <div class="form-group">
                  <%= af.label :street_address, t(:street_address) %>
               </div>
               <div>
                  <%= af.text_field :street_address, class: "form-control", placeholder: I18n.t(:add_street_address) %>
               </div>
            </div>
            <div class="form-group">
               <div class="control-label">
                  <%= af.label :zip_code, t(:zip_code) %>
               </div>
               <div>
                  <%= af.text_field :zip_code, class: "form-control", placeholder: I18n.t(:add_zip_code) %>
               </div>
            </div>
            <div class="form-group">
               <div>
                  <%= af.collection_select :country_id, Country.order(:name), :id, :name, { include_blank: false }, { multiple: false, class: 'form-control', id: 'select2-country' } %>
               </div>
            </div>
            <div class="form-group">
               <div>
                  <%= af.grouped_collection_select :state_id, Country.includes(:states).order(:name), :states, :name, :id, :name, { include_blank: false }, { multiple: false, class: 'form-control', id: 'select2-state' } %>
               </div>
            </div>
            <div class="form-group">
               <div>
                  <%= af.grouped_collection_select :city_id, State.includes(:cities).order(:name), :cities, :name, :id, :name, { include_blank: false }, { multiple: false, class: 'form-control', id: 'select2-city' } %>
               </div>
            </div>
            <div class="form-group">
               <div class="control-label">
                  <%= af.label :kind %>
               </div>
               <div>
                  <%= af.select :kind, options_for_enum(Address.new, :kind), {}, { class: 'form-control' } %>
               </div>
            </div>
            <%= af.submit t(:create_address), class: 'btn btn-primary' %>
         </div>
         <% end %>
         <hr/>
      </div>
   </div>
</div>
