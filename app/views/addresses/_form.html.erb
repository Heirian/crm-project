<script type="text/javascript">
  $(document).ready(function () {
    $("#select2-city").select2();
    $("#select2-state").select2();
    $("#select2-country").select2();
    theme : "bootstrap"
  });
</script>

<%= form_for [addressable, Address.new] do |af| %>
<div class="form-group">
  <div class="control-label col-md-5">
    <%= af.label :street_address, t(:street_address) %>
  </div>
  <div class="col-md-3">
    <%= af.text_field :street_address, class: "form-control", placeholder: I18n.t(:add_street_address) %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-md-5">
    <%= af.label :zip_code, t(:zip_code) %>
  </div>

  <div class="col-md-3">
    <%= af.text_field :zip_code, class: "form-control", placeholder: I18n.t(:add_zip_code) %>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <%= af.collection_select :country_id, Country.order(:name), :id, :name, { include_blank: false }, { multiple: false, class: 'form-control', id: 'select2-country' } %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <%= af.grouped_collection_select :state_id, Country.order(:name), :states, :name, :id, :name, { include_blank: false }, { multiple: false, class: 'form-control', id: 'select2-state' } %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <%= af.grouped_collection_select :city_id, State.order(:name), :cities, :name, :id, :name, { include_blank: false }, { multiple: false, class: 'form-control', id: 'select2-city' } %>
    </div>
  </div>
</div>

<%= af.submit t(:create_address), class: 'btn btn-primary' %>
<% end %>
<hr/>
