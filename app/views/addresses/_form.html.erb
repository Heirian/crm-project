<%= form_for [addressable, Address.new] do |af| %>
  <div class="form-group">
    <div class="control-label col-md-5">
      <%= af.label :street_address, t(:street_address) %>
    </div>
    <div class="col-md-3">
      <%= af.text_field :street_address, class: "form-control", placeholder: I18n.t(:add_street_address) %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-md-5">
      <%= af.label :zip_code, t(:zip_code) %>
    </div>
    <div class="col-md-3">
      <%= af.text_field :zip_code, class: "form-control", placeholder: I18n.t(:add_zip_code) %>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <%= af.collection_select :city_id, City.all, :id, :name, { include_blank: false }, { multiple: false } %>
      </div>
    </div>
  </div>

  <%= af.submit class: 'btn btn-primary' %>
<% end %>
<hr />
